<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/profilebg"
        android:layout_margin="30dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#99FFFFFF"
            android:text="Amber"
            android:fontFamily="@font/rf"
            android:textSize="30dp"
            android:textColor="#000000"
            android:padding="6dp"/>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="120dp">


        <ImageView
            android:id="@+id/pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/face2"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/circle_crop"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/circle" />


    </FrameLayout>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#99FFFFFF"
        android:hint="Edit Bio"
        android:fontFamily="@font/rf"
        android:textSize="20dp"
        android:textColor="#000000"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99FFFFFF"
        android:text="\@amberkristoff\n Newyork\n\n I love looking for inspiration from my travels!
DM me for enquiries or commissions!\n\n
amberkristoff@gmail.com"
        android:fontFamily="@font/rf"
        android:textSize="16dp"
        android:textColor="#000000"
        android:padding="20dp"
        android:backgroundTint="#26000000"/>

</LinearLayout>