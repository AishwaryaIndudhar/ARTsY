<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/profilebg"
        android:layout_margin="30dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#99FFFFFF"
            android:text="Ursula Knightley"
            android:fontFamily="@font/rf"
            android:textSize="30dp"
            android:textColor="#000000"
            android:padding="6dp"/>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="120dp">


            <ImageView
                android:id="@+id/pic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/face"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/circle_crop"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/circle" />


        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_user_plus"
        android:layout_marginLeft="260dp"
        />
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_msg"
        android:layout_marginLeft="20dp"
        />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99FFFFFF"
        android:text="\@ursulaknightley\n Moscow,Russia\n\n I love looking for inspiration from my travels!
Working on a big project:)\n\n
ursulaknightley@gmail.com"
        android:fontFamily="@font/rf"
        android:textSize="16dp"
        android:textColor="#000000"
        android:padding="40dp"
        android:backgroundTint="#26000000"/>

</LinearLayout>